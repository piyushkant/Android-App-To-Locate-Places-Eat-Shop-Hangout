<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="CustomTheme" parent="android:Theme.Light">
		<item name="android:colorBackground">#666666</item>
	</style>

	<style name="LightTabWidget" parent="@android:style/Widget.TabWidget">
		<item name="android:textColor">@drawable/tab_indicator_text</item>
	</style>

	<style name="preview">
		<!-- 3dp so the background border to be visible -->
		<item name="android:padding">7dp</item>
		<item name="android:background">@drawable/image_border</item>
		<item name="android:scaleType">fitCenter</item>
	</style>

	<style name="list">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@android:color/background_light</item>
		<item name="android:listSelector">@android:drawable/list_selector_background</item>
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	</style>
</resources>