<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical" android:background="@drawable/back_repeat"
	android:id="@+id/ll">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal" android:background="@drawable/back_repeat">

		<FrameLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content">


			<ImageView android:id="@+id/result_no"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:id="@+id/result_text_no"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:textStyle="bold" />


		</FrameLayout>

		<RelativeLayout android:id="@+id/header"
			android:orientation="vertical" android:layout_width="match_parent"
			android:layout_height="wrap_content" style="@style/ButtonText">

			<TextView android:id="@+id/name" android:layout_width="match_parent"
				android:layout_height="wrap_content" android:textStyle="bold"
				android:textColor="#000000" />

			<TextView android:id="@+id/address" android:layout_width="match_parent"
				android:layout_height="wrap_content" android:textStyle="bold"
				android:textColor="#000000" android:layout_below="@id/name" />

			<TextView android:id="@+id/cross_street" android:layout_width="match_parent"
				android:layout_height="wrap_content" android:textStyle="bold"
				android:textColor="#000000" android:layout_below="@id/address" />

			<ImageView android:id="@+id/map_image"
				android:layout_width="140px" android:layout_height="140px"
				android:layout_alignParentRight="true" android:layout_toRightOf="@id/name"
				android:tag="Get Directions" />

			<TextView android:id="@+id/number1" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="#0000ff"
				android:layout_below="@id/cross_street" android:visibility="gone" />

			<TextView android:id="@+id/distance" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="#000000"
				android:layout_below="@id/number1" />

		</RelativeLayout>

	</LinearLayout>

	<Button android:id="@+id/add_tip" android:layout_width="fill_parent"
		android:textSize="18dip" android:textColor="#ffffff"
		android:layout_height="wrap_content" android:text="Add Review"
		style="@style/Result_Buttons" android:visibility="invisible"/>


</LinearLayout>