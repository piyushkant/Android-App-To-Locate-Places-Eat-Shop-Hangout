<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="#ffffff">

	<ImageView android:id="@+id/imageview" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/logo" />

	<EditText android:id="@+id/smalltip" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:hint="Write a Quick Tip !"
		android:layout_marginTop="10dp" android:layout_below="@id/imageview"
		android:lines="2" android:selectAllOnFocus="true" />

	<CheckBox android:id="@+id/shareOn_fb" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:checked="true"
		android:textStyle="bold" android:text="Tell my Facebook Friends !"
		android:textColor="#000000" android:layout_below="@id/smalltip"
		android:layout_marginTop="10dp" />


	<Button android:id="@+id/submit_review1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Submit"
		android:onClick="submitReview" android:layout_below="@id/smalltip"
		android:layout_alignParentRight="true" style="@style/ButtonText" />


</RelativeLayout>
