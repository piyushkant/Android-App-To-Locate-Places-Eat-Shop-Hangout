<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/facebook_login"
	android:gravity="center_horizontal">


	<ImageButton android:id="@+id/mobile_home_header"
		android:layout_marginTop="2dp" android:padding="13dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/mobile_home_header"
		android:layout_alignParentRight="true" android:soundEffectsEnabled="true"
		android:onClick="startHome" />

	<TextView android:id="@+id/txt" android:textColor="@drawable/black"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:visibility="invisible" />


	<com.facebook.android.LoginButton
		android:id="@+id/login" android:src="@drawable/login_button"
		android:layout_centerVertical="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_margin="30dp" />


</RelativeLayout>